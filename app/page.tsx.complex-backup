                    <Button variant="outline" size="sm">Toggle</Button>
                  </div>
                  <div className="flex items-center justify-between">
                    <span>Dark mode</span>
                    <Button variant="outline" size="sm">Toggle</Button>
                  </div>
                  <Button>Save Settings</Button>
                </div>
              </TabsContent>
