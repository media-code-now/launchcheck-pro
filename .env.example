# Database Configuration
# For development, you can use SQLite (default)
DATABASE_URL="file:./dev.db"

# For production with Neon PostgreSQL (recommended)
# DATABASE_URL="postgresql://username:password@hostname.neon.tech/database?sslmode=require"

# Alternative production databases:
# DATABASE_URL="postgresql://username:password@hostname:port/database_name"

# Next.js Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# For production deployment
# NEXT_PUBLIC_APP_URL="https://your-domain.com"

# Optional: Database Provider for Prisma
# DATABASE_PROVIDER="sqlite" # or "postgresql" for production

# Optional: Logging Level
# LOG_LEVEL="info" # or "debug", "warn", "error"

# Optional: Feature Flags
# ENABLE_ANALYTICS="false"
# ENABLE_DEBUG_MODE="false"

# Security (for production)
# NEXTAUTH_SECRET="your-secret-key-here"
# NEXTAUTH_URL="https://your-domain.com"

# API Rate Limiting (optional)
# RATE_LIMIT_REQUESTS="100"
# RATE_LIMIT_WINDOW="900" # 15 minutes in seconds